<div class="container">
  <% if @photo.errors.present? %>
    <ul>
      <% @photo.errors.each do |error, message| %>
        <li><%= "#{error.capitalize} #{message}" %></li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for @photo do |f| %>
    <div class="form-group">
      <%= f.label :title, "Title" %>
      <%= f.text_field :title, class: "form-control" %>  
    </div>
    
    <div class="form-group">
      <%= f.label :date, "Date" %>
      <%= f.text_field :date, class: "form-control" %>  
    </div>
    
    <div class="form-group">
      <%= f.label :description, "Description" %>
      <%= f.text_field :description, class: "form-control" %>
    </div>
      
    <div class="form-group">
      <%= f.label :file_location, "File Location" %>
      <%= f.file_field :file_location %>
    </div>
      
    <div class="form-group">
      <% unless @photo.new_record? %>
        <%= image_tag @photo.file_location.url %>  
      <% end %>
    </div>
    
    <div class="form-actions">
      <%= f.submit %>  
    </div>
  <% end %>
</div>
  
